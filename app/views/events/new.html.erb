<h3>Create new event</h3>
<% if @event.errors.any? %>
  <% @event.errors.each do |key, message| %>
    <h5><%= message %></h5>
  <% end %>
<% end %>
<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :date %>
  <%= f.date_field :date %>

  <%= f.submit "Create event" %>
<% end  %>
